{
	"$schema": "http://json.schemastore.org/stylelintrc.json",
	"extends": [
		"stylelint-config-standard",
		"stylelint-config-prettier"
	],
	"ignoreFiles": [
		"node_modules",
		"dist",
		"dist-ssr"
	],
	"plugins": [
		"stylelint-order"
	],
	"rules": {
		"order/properties-alphabetical-order": true
	}
}

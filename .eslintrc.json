{
	"$schema": "https://json.schemastore.org/eslintrc",
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"prettier"
	],
	"plugins": [
		"react",
		"react-hooks"
	],
	"ignorePatterns": [
		"node_modules",
		"vite.config.js",
		"dist",
		"dist-ssr"
	],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
		"react/jsx-uses-react": "error",
		"react/jsx-uses-vars": "error"
	}
}
